<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="hero__categories">
        <div class="hero__categories__all">
          <i class="fa fa-bars"></i>
          <span>All Catalogues</span>
        </div>
        <ul>
          <% data.forEach((cata, index) => {%>
          <li><a href="/title/<%= cata._id%>"><%= cata.name %></a></li>
          <%})%>
        </ul>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="hero__search">
        <div class="hero__search__form">
          <form action="#">
            <input type="text" placeholder="Enter book title?" />
            <button type="submit" class="site-btn">SEARCH</button>
          </form>
        </div>
        <div class="hero__search__phone">
          <div class="hero__search__phone__icon">
            <a class="tom" href="tel:08065449808"
              ><i class="fa fa-phone"></i
            ></a>
          </div>
          <div class="hero__search__phone__text">
            <h5>08065449808</h5>
            <span>support 24/7 time</span>
          </div>
        </div>
      </div>
      <div class="hero__item set-bg" data-setbg="img/books/cover.jpg">
        <div class="hero__text">
          <span>Books of Life</span>
          <h2>MH <br />Bookshop</h2>
          <p>Rent and read Online or Buy hard copy</p>
          <a href="#" class="primary-btn">SHOP NOW</a>
        </div>
      </div>
    </div>
  </div>
</div>
