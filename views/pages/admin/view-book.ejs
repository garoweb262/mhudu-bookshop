<div class="page-inner">
  <div class="page-header">
    <h4 class="page-title"><%= result.title %></h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="row">
            <div class="col-lg-6 px-5 my-3">
              <div class="view-img">
                <img
                  src="/<%= result.dp %>"
                  class="img-fluid w-100 h-70"
                  alt="/book-img"
                  srcset=""
                />
              </div>
            </div>
            <div class="col-lg-6">
              <div class="view-details my-3">
                <div class="row">
                  <h4 class="text-warning">
                    <span class="bold-text text-dark">Book Title:</span><%=
                    result.title %>
                  </h4>
                  <h5 class="text-dark">
                    <span class="bold-text text-dark">Book Price:</span><%=
                    result.price %>
                  </h5>
                </div>

                <p class="text-dark">
                  <span class="bold-text text-dark">Book description:</span><%=
                  result.description %>
                </p>
                <div class="row spacing-x-5">
                  <p class="tor text-warning">
                    <span class="bold-text text-dark">Book Author:</span> <%=
                    result.author %>
                  </p>
                  <p>
                    <span class="bold-text text-dark">Catalogue:</span><%=
                    result.catalogue%>
                  </p>
                </div>
                <p class="text-dark">
                  <span class="bold-text text-dark">ISBN NO:</span><%=
                  result.isbn %>
                </p>
                <a class="mx-3" href="/book/upload-pdf/<%= result._id %>">
                  <button class="btn btn-primary w-50 mx-1">Upload Pdf</button>
                </a>
              </div>
              <div class="row my-3">
                <a class="mx-3" href="/book/upload-pdf/<%= result._id %>">
                  <button class="btn btn-outline-primary w-100 mx-1">
                    view Pdf
                  </button>
                </a>

                <a class="mx-3" href="/book/edit/<%= result._id %>"
                  ><button class="btn btn-outline-success w-100 mx-1">
                    Edit
                  </button></a
                >
                <a href="/book/delete/<%= result._id %>"
                  ><button class="btn btn-outline-danger w-100 mx-1">
                    Delete
                  </button></a
                >
                <div
                  class="modal fade"
                  id="addRowModal"
                  tabindex="-1"
                  role="dialog"
                  aria-hidden="true"
                >
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header no-bd">
                        <h5 class="modal-title">
                          <span class="fw-mediumbold"> Upload Pdf</span>
                        </h5>
                        <button
                          type="button"
                          class="close"
                          data-dismiss="modal"
                          aria-label="Close"
                        >
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form
                          action="book/pdf/upload-pdf/<%= result._id %>"
                          method="post"
                          enctype="multipart/form-data"
                        >
                          <div class="row">
                            <div class="col-md-6 pr-0">
                              <div class="form-group form-group-default">
                                <label>Pdf</label>
                                <input
                                  id="addPosition"
                                  type="file"
                                  class="form-control"
                                  name="pdf"
                                />
                              </div>
                            </div>
                            <div class="col-md-6">
                              <input
                                type="submit"
                                value="Upload"
                                name="submit"
                                class="btn btn-warning text-light w-100"
                              />
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
