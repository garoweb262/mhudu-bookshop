<div class="page-inner">
  <div class="page-header">
    <h4 class="page-title"><%= result.title %></h4>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="row">
            <div class="col-lg-6 px-5 my-3">
              <div class="view-img">
                <img
                  src="/<%= result.dp %>"
                  class="img-fluid w-50 h-70"
                  alt="/book-img"
                  srcset=""
                />
              </div>
            </div>
            <div class="col-lg-6">
              <div class="view-details my-3">
                <div class="row">
                  <h4 class="text-warning">
                    <span class="bold-text text-dark">Book Title:</span><%=
                    result.title %>
                  </h4>
                  <h5 class="text-dark">
                    <span class="bold-text text-dark">Book Price:</span><%=
                    result.price %>
                  </h5>
                </div>

                <p class="text-dark">
                  <span class="bold-text text-dark">Book description:</span><%=
                  result.description %>
                </p>
                <div class="row spacing-x-5">
                  <p class="tor text-warning">
                    <span class="bold-text text-dark">Book Author:</span> <%=
                    result.author %>
                  </p>
                  <p>
                    <span class="bold-text text-dark">Catalogue:</span><%=
                    result.catalogue%>
                  </p>
                </div>
                <p class="text-dark">
                  <span class="bold-text text-dark">ISBN NO:</span><%=
                  result.isbn %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
